<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonInput"
        android:text="Search food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="searchClicked"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/buttonPlan"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"/>

    <Button
        android:id="@+id/buttonPlan"
        android:text="Diet plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="planClicked"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/buttonInput"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textViewCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories: 1400/2500"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/buttonInput"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ProgressBar
        android:id="@+id/progressBarCalories"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:max="2500"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewCalories"/>

    <TextView
        android:id="@+id/textViewMacros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Macro nutrients:"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/progressBarCalories"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.design.widget.BottomNavigationView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorPrimary">

        <ImageButton
            android:id="@+id/diaryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            app:srcCompat="@drawable/ic_diary"
            android:layout_marginStart="50dp"
            android:background="@color/colorPrimary" />

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_home"
            android:background="@color/colorPrimary" />

        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            app:srcCompat="@drawable/ic_profile"
            android:layout_marginEnd="50dp"
            android:background="@color/colorPrimary" />
    </android.support.design.widget.BottomNavigationView>

</android.support.constraint.ConstraintLayout>